<Window x:Class="PatientRecordMVVM.Views.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="{materialDesign:MaterialDesignFont}"
        xmlns:local="clr-namespace:PatientRecordMVVM.Views"
        xmlns:vm ="clr-namespace:PatientRecordMVVM.ViewModels"
        xmlns:controls ="clr-namespace:PatientRecordMVVM.Controls"
        mc:Ignorable="d"
        Title="PrintPreviewWindow" Height="850" Width="1000" Foreground="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <controls:MainHeaderControl/>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:PrintPreviewControl
                x:Name="PrintPreview"
                HorizontalAlignment="Center"
                Width="600"
                Height="700"
                />
        </Grid>
    </Grid>
</Window>
